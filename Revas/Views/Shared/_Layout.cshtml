<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Assets/Style/style.css">
    <title>Document</title>
</head>

<body>
    <header>
        <section id="Navbar" class="fixed-top bg-light">
            <div class="navbar">
                <div class="container ">
                    <div class="div">
                        <h1 class="logo text-uppercase">Revas</h1>
                    </div>
                    <div class="Menu ">
                        <ul class="Menuul row text-uppercase">
                            <li><a href="#">Home</a></li>
                            <li><a href="#Portfolio">Portfolio</a></li>
                            <li><a href="#About">About</a></li>
                            <li><a href="#Contact">Contact</a></li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a class="btn btn-primary" asp-area="AdminRevas" asp-controller="DashBoard" asp-action="Index">AdminPanel</a>
                                <a class="btn btn-danger"   asp-controller="account" asp-action="Logout">Logout</a>


                            }
                            else
                            {
                                @*hech kim register etmesin deye commite alinib*@

                                @*<a class="btn btn-primary"   asp-controller="account" asp-action="Register">Admin Register</a>*@
                                <a class="btn btn-primary" asp-controller="account" asp-action="login">Admin login</a>
                            }

                        </ul>

                    </div>
                </div>
            </div>
        </section>
        <!-- <hr class="navhr"> -->

    </header>

    @RenderBody()
    <footer>
        <section id="Footer" class="  mt-4">
            <div class="d-flex justify-content-end">
                <p class="footertitle">2015 www.yourdomain.com | All Right Reserved | <span>by binarytheme</span></p>

            </div>
        </section>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/3818e49a5f.js" crossorigin="anonymous"></script>
    <script src="~/Assets/Js/script.js"></script>
</body>

</html>
